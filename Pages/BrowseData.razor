            {
                if (i >= 0 && i < 11)
                    await Js.InvokeVoidAsync("AML.logit", $"sql blazor loading row {i}");
                pricesList.Add(result[i]);
            }
            Prices = pricesList.AsEnumerable();
            await InvokeAsync(StateHasChanged);
        }
    }


